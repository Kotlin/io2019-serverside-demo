<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:animateLayoutChanges="true"
  android:background="@color/primaryDarkColor"
  tools:context=".uploader.UploadFragment">

  <ImageView
    android:id="@+id/cloudUploadImage"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:src="@drawable/ic_cloud_upload"
    android:importantForAccessibility="no"
    app:layout_constraintBottom_toTopOf="@+id/uploadingLabel"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintVertical_chainStyle="packed" />

  <TextView
    android:id="@+id/uploadingLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/uploading_images"
    android:textStyle="bold"
    android:textSize="18sp"
    android:textColor="@color/secondaryTextColor"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/cloudUploadImage"
    app:layout_constraintStart_toEndOf="@+id/progressBar"
    app:layout_constraintHorizontal_bias="0.5" />

  <ProgressBar
    android:id="@+id/progressBar"
    style="@android:style/Widget.Material.ProgressBar.Small"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    app:layout_constraintEnd_toStartOf="@+id/uploadingLabel"
    app:layout_constraintTop_toBottomOf="@+id/cloudUploadImage"
    app:layout_constraintBottom_toBottomOf="@+id/uploadingLabel"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintHorizontal_chainStyle="packed" />

</androidx.constraintlayout.widget.ConstraintLayout>
